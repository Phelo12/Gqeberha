    Layout = "~/Views/Shared/_GBV.cshtml";
}

<h1>Nurse</h1>

<style>
    #dash-con {
        background: rgba( 0, 13, 161, 0.5 );
        box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
