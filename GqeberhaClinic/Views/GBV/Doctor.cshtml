@using GqeberhaClinic.Models
@model GqeberhaClinic.Models.Appointments
@{
    ViewData["Title"] = "Doctor";
    Layout = "~/Views/Shared/_GBV.cshtml";
}




<style>
    #dash-con {
        background: rgba( 0, 13, 161, 0.5 );
        box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
        backdrop-filter: blur( 6px );
        -webkit-backdrop-filter: blur( 6px );
        border-radius: 10px;
        border: 1px solid rgba( 255, 255, 255, 0.18 );
    }

    .container h1 {
        white-space: nowrap; /* Prevents text from wrapping to the next line */
        overflow: hidden; /* Hides any overflowing text */
        text-overflow: ellipsis; /* Truncates text with an ellipsis (...) */
    }

    #dash-con:hover {
        background: rgba(224, 255, 255, 0.7 );
        box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
        backdrop-filter: blur( 10.5px );
        -webkit-backdrop-filter: blur( 10.5px );
        border-radius: 10px;
        border: 1px solid rgba( 255, 255, 255, 0.18 );
    }
</style>


<div class="container-fluid pt-4 px-4" style="background-color: lightblue">
   


    <bold><h1>Welcome to <sapn class="text-primary">Gqeberha</sapn> <span class="text-warning">Clinic</span></h1></bold>
    <h3>Doctor's DashBoard</h3>
    <h4>What would you like to do today?</h4>
    <div class="container-fluid pt-4 px-4">

        <div class="container mt-5">
            <div class="card-group gap-2">
                <div class="card text-center">
                    <div class="card h-100">
                        <a style="text-decoration:none" asp-action="Index" asp-controller="Appointments">
                            <div class="card-body">
                                <div class="stat-widget-five">
                                    <div class="stat-icon dib flat-color-1">
                                        <img src="~/images/p-removebg-preview.png" width="90" />
                                    </div>
                                    <div class="stat-content">
                                        <div class="text-left dib">
                                            <div class="stat-heading">Book an Appointment</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>

                <div class="card text-center">
                    <div class="card h-100">
                        <a style="text-decoration:none" asp-action="Index" asp-controller="ReportCases">
                            <div class="card-body">
                                <div class="stat-widget-five">
                                    <div class="stat-icon dib flat-color-2">
                                        <img src="~/images/p-removebg-preview.png" width="90" />
                                    </div>
                                    <div class="stat-content">
                                        <div class="text-left dib">
                                            <div class="stat-heading">Report A Case</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
                

                <div class="card text-center">
                    <div class="card h-100">
                        <a style="text-decoration:none" asp-action="Index" asp-controller="Medical_File">
                            <div class="card-body">
                                <div class="stat-widget-five">
                                    <div class="stat-icon dib flat-color-3">
                                        <img src="~/images/p-removebg-preview.png" width="90" />
                                    </div>
                                    <div class="stat-content">
                                        <div class="text-left dib">
                                            <div class="stat-heading">View Patient Files</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <table id="MyTable" class="table table-bordered table-secondary">
        <thead>
            <tr>
                <th colspan="3">Gender Based Violence Service providers</th>
            </tr>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Type of Service</th>
                <th scope="col">Contact Details</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">GBV.org</th>
                <td>SA government call centre</td>
                <td>0800 428 428</td>

            </tr>
            <tr>
                <th scope="row">Law Clinic</th>
                <td>Free Legal services</td>
                <td>011 717 8562</td>

            </tr>
            <tr>
                <th scope="row">Netcare</th>
                <td>Emergency Medical Services</td>
                <td>082 911</td>
            </tr>
            <tr>
                <th scope="row">SAPS</th>
                <td>South African Police Service</td>
                <td>10111</td>
            </tr>
        </tbody>
    </table>

</div>

