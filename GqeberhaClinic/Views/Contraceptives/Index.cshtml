@model IEnumerable<GqeberhaClinic.Models.Contraceptive>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Family-P.cshtml";
}

<div class=" text-center bg-primary p-2">
    <h3 class="text-center text-white">Contraceptive Information</h3>
</div>
@if (User.IsInRole("Nurse"))
{
    <p>
        <a class="btn btn-primary m-2" asp-action="Create">Add New Information</a>
    </p>
}

<div class="accordion mt-2" id="accordionExample">
    @foreach (var item in Model)
    {
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne-@item.Id" aria-expanded="true" aria-controls="collapseOne">
                    @item.Name
                </button>
            </h2>
            <div id="collapseOne-@item.Id" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label  class="control-label">type</label>
                                <input disabled value="@item.Type"  class="form-control" />
                            </div>
                            <div class="form-group">
                                <label class="control-label"></label>
                                <input disabled value="@item.DurationOfEffectiveness" class="form-control" />
                             
                            </div>
                            <div class="form-group">
                                <label class="control-label">Method Of Use</label>
                                <input disabled value="@item.MethodOfUse" class="form-control" />
                               
                            </div>
                            <div class="form-group">
                                <label  class="control-label">Efficacy Rate</label>
                                <input disabled value="@item.EfficacyRate" class="form-control" />
                              
                            </div>
                            <div class="form-group">
                                <label class="control-label">Cost</label>
                                <input disabled value="@item.Cost" class="form-control" />

                            </div>
                            <div class="form-group">
                                <label class="control-label">Contraindications</label>
                                <input disabled value="@item.Contraindications" class="form-control" />

                            </div>
                        </div> 
                        <div class="col-6">
                            <div class="form-group">
                                <label class="control-label">Side Effects</label>
                                <input disabled value="@item.SideEffects" class="form-control" />
                               
                            </div>
                            <div class="form-group">
                                <label  class="control-label">Benefits</label>
                                <input disabled value="@item.Benefits" class="form-control" />
                               
                            </div>
                           
                            <div class="form-group">
                                <label class="control-label">Reversibility</label>
                                <input disabled value="@item.Reversibility" class="form-control" />
                                
                            </div>
                            <div class="form-group">
                                <label  class="control-label">Storage Instructions</label>
                                <input disabled value="@item.StorageInstructions" class="form-control" />
                                
                            </div>
                            <div class="form-group">
                                <label class="control-label">Additional Notes</label>
                                <input disabled value="@item.AdditionalNotes" class="form-control" />
                             
                            </div>
                        </div>
                        <div class="mt-3">
                            @if (User.IsInRole("Nurse"))
                            {
                                <a class="btn btn-primary" asp-action="Edit" asp-route-Id="@item.Id">Edit</a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-Id="@item.Id">Delete</a>
                            }
                      
                            </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>