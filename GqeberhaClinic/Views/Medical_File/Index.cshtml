@using GqeberhaClinic.Models
@model GqeberhaClinic.Models.Records

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_GBV.cshtml";
}


<div class="text-center bg-primary p-2">
    <h4 class="text-white">Medical File</h4>
</div>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="MyTable" class="table">
    <thead class="table table-stripped">
        <tr>
            <th>
                Patient Full Name
            </th>
            <th>
                Gender
            </th>
            <th>
                BirthDate
            </th>
            <th>
                IDNumber
            </th>
            <th>
                AddressLine1
            </th>
            <th>
                EmergencyPerson
            </th>
            <th>
                EmergencyContactNo
            </th>

            <th></th>
          
        </tr>
    </thead>
    <tbody>
        @foreach (Medical_File item in ViewBag.Files)
        {
            <tr>
                <td>
                    @item.mainUser.FirstName
                    @item.mainUser.LastName
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IDNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddressLine1)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.EmergencyPerson)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmergencyContactNo)
                <td>
                    <div class="dropdown">
                        <a class="btn btn-secondary dropdown-toggle" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-three-dots-vertical"></i>
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                            <li> <a class="dropdown-item" asp-controller="Medical_File" asp-action="Patient_File" asp-route-File="@item.FileID">Full File</a></li>
                            <li> <a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#exampleModal-@item.FileID">Add Medical Rercords</a></li>
                            <li><a class="dropdown-item" asp-controller="Records" asp-action="Index" asp-route-id="@item.FileID">View Rercords</a></li>

                            <!-- Modal -->

                        </ul>
                        <div class="modal fade" id="exampleModal-@item.FileID" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel-@item.FileID">Add Medical Record</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="col-md-12">
                                            <form asp-controller="Records" asp-action="Create">
                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                                <input hidden value="@item.FileID" asp-for="FileID" class="form-control" />
                                                <div class="row">
                                                    <div class="col-6">
                                                        <div class="form-group">
                                                            <label asp-for="BloodPressure" class="control-label"></label>
                                                            <input asp-for="BloodPressure" class="form-control" />
                                                            <span asp-validation-for="BloodPressure" class="text-danger"></span>
                                                        </div>
                                                        <div class="form-group">
                                                            <label asp-for="HeartRate" class="control-label"></label>
                                                            <input asp-for="HeartRate" class="form-control" />
                                                            <span asp-validation-for="HeartRate" class="text-danger"></span>
                                                        </div>
                                                        <div class="form-group">
                                                            <label asp-for="Temperature" class="control-label"></label>
                                                            <input asp-for="Temperature" class="form-control" />
                                                            <span asp-validation-for="Temperature" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-6">
                                                        <div class="form-group">
                                                            <label asp-for="Height" class="control-label"></label>
                                                            <input asp-for="Height" class="form-control" />
                                                            <span asp-validation-for="Height" class="text-danger"></span>
                                                        </div>
                                                        <div class="form-group">
                                                            <label asp-for="Weight" class="control-label"></label>
                                                            <input asp-for="Weight" class="form-control" />
                                                            <span asp-validation-for="Weight" class="text-danger"></span>
                                                        </div>
                                                        <div class="form-group">
                                                            <label asp-for="Notes" class="control-label"></label>
                                                            <input asp-for="Notes" class="form-control" />
                                                            <span asp-validation-for="Notes" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                </div>


                                                <div class="form-group">
                                                    <input type="submit" value="Add Record" class="btn btn-primary m-2" />
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
