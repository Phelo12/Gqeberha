@using Microsoft.AspNetCore.Identity
@using GqeberhaClinic.Areas.Identity.Data
@using Q=GqeberhaClinic.Models

@inject SignInManager<GqebheraUser> SignInManager
@inject UserManager<GqebheraUser> UserManager
<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - GqeberhaClinic</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GqeberhaClinic.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/Logos/favicon.ico">
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/Sidebar2/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/Sidebar2/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/Sidebar2/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/Sidebar2/css/style.css" rel="stylesheet">
</head>
<body>
    <div class="container-xxl position-relative bg-white d-flex p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Sidebar Start -->
        @if (User.IsInRole("Patient"))
        {
            <div id="sidebar" class="sidebar pe-4 pb-3">
                <nav class="navbar bg-light navbar-light">
                    <a href="index.html" class="navbar-brand mx-4 mb-3">
                        <h3 class="text-primary"><img src="~/Logos/2.png" width="200px" /></h3>
                    </a>
                    <div class="d-flex align-items-center ms-4 mb-4">
                        <div class="position-relative">
                            @if (UserManager.GetUserAsync(User).Result.MyPicture != null)
                            {
                                <img class="rounded-circle" src="~/images/icons8-user-100.png" alt="" style="width: 40px; height: 40px;">
                                <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                            }
                            else
                            {
                                <img class="rounded-circle" src="~/images/icons8-user-100.png" alt="" style="width: 40px; height: 40px;">
                                <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                            }

                        </div>
                        <div class="ms-3">
                            <h6 class="mb-0">@UserManager.GetUserAsync(User).Result.FirstName @UserManager.GetUserAsync(User).Result.LastName</h6>
                            <span>Patient</span>
                        </div>
                    </div>
                    <div class="navbar-nav w-100">
                        <a asp-action="Index" asp-controller="Gqebhera" class="nav-item nav-link"><i class="fa fa-home me-2"></i>Home</a>
                        <a asp-action="Patient" asp-controller="Chronic" class="nav-item nav-link"><i class="fa fa-tachometer-alt me-2"></i>Dashboard</a>
                        <a asp-action="My_Prescription" asp-controller="Prescriptions" class="nav-item nav-link"><i class="fas fa-file me-2"></i>My Prescription</a>
                        <a asp-action="Index" asp-controller="MedicalRefills" class="nav-item nav-link"><i class='fas fa-archive me-2' style='color:#000000'></i>Medical Refill Requests</a>
                        <a asp-action="Index" asp-controller="Medical_Feedback" class="nav-item nav-link"><i class="fa fa-file me-2"></i>Prescription side effect</a>
                        <a asp-action="My_Prescription_Report" asp-controller="Prescriptions" class="nav-item nav-link"><i class="fa fa-file me-2"></i>Prescription Report</a>
                    </div>
                </nav>
            </div>
        }
        else if (User.IsInRole("Nurse"))
        {
            <div id="sidebar" class="sidebar pe-4 pb-3">
                <nav class="navbar bg-light navbar-light">
                    <a href="index.html" class="navbar-brand mx-4 mb-3">
                        <h3 class="text-primary"><img src="~/Logos/2.png" width="200px" /></h3>
                    </a>
                    <div class="d-flex align-items-center ms-4 mb-4">
                        <div class="position-relative">
                            @if (UserManager.GetUserAsync(User).Result.MyPicture != null)
                            {
                                <img class="rounded-circle" src="~/images/icons8-user-100.png" alt="" style="width: 40px; height: 40px;">
                                <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                            }
                            else
                            {
                                <img class="rounded-circle" src="~/images/icons8-user-100.png" alt="" style="width: 40px; height: 40px;">
                                <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                            }

                        </div>
                        <div class="ms-3">
                            <h6 class="mb-0">@UserManager.GetUserAsync(User).Result.FirstName @UserManager.GetUserAsync(User).Result.LastName</h6>
                            <span>Nurse</span>
                        </div>
                    </div>
                    <div class="navbar-nav w-100">
                        <a asp-action="Index" asp-controller="Gqebhera" class="nav-item nav-link"><i class="fa fa-home me-2"></i>Home</a>
                        <a href="index.html" class="nav-item nav-link"><i class="fa fa-tachometer-alt me-2"></i>Dashboard</a>
                        <a asp-action="All_Appointments" asp-controller="Appointments" class="nav-item nav-link"><i class="fa fa-calendar me-2"></i>Appointments</a>
                        <a asp-action="Index" asp-controller="Appointments_Ques" class="nav-item nav-link"><i class="fa fa-calendar me-2"></i>Queued Appointments</a>
                        <a asp-action="Index" asp-controller="Medical_File" class="nav-item nav-link"><i class="fa fa-file me-2"></i>Medical Files</a>
                        <a asp-action="Index" asp-controller="Records" class="nav-item nav-link"><i class="fa fa-file me-2"></i>Medical Records</a>
                        <a asp-action="Reports" asp-controller="Medical_File" class="nav-item nav-link"><i class="fa fa-file me-2"></i>Medical Files Report</a>
                    </div>
                </nav>
            </div>
        }
        else if (User.IsInRole("Doctor"))
        {
            <div id="sidebar" class="sidebar pe-4 pb-3">
                <nav class="navbar bg-light navbar-light">
                    <a href="index.html" class="navbar-brand mx-4 mb-3">
                        <h3 class="text-primary"><img src="~/Logos/2.png" width="200px" /></h3>
                    </a>
                    <div class="d-flex align-items-center ms-4 mb-4">
                        <div class="position-relative">
                            @if (UserManager.GetUserAsync(User).Result.MyPicture != null)
                            {
                                <img class="rounded-circle" src="~/images/icons8-user-100.png" alt="" style="width: 40px; height: 40px;">
                                <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                            }
                            else
                            {
                                <img class="rounded-circle" src="~/images/icons8-user-100.png" alt="" style="width: 40px; height: 40px;">
                                <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                            }

                        </div>
                        <div class="ms-3">
                            <h6 class="mb-0">@UserManager.GetUserAsync(User).Result.FirstName @UserManager.GetUserAsync(User).Result.LastName</h6>
                            <span>Nurse</span>
                        </div>
                    </div>
                    <div class="navbar-nav w-100">
                        <a asp-action="Index" asp-controller="Gqebhera" class="nav-item nav-link"><i class="fa fa-home me-2"></i>Home</a>
                        <a asp-action="Doctor" asp-controller="Chronic" class="nav-item nav-link"><i class="fa fa-tachometer-alt me-2"></i>Dashboard</a>
                        <a asp-action="Index" asp-controller="Prescriptions" class="nav-item nav-link"><i class='fas fa-file me-2' style='color:#000000'></i>Prescriptions</a>
                        <a asp-action="All_requests" asp-controller="MedicalRefills" class="nav-item nav-link"><i class='fas fa-archive me-2' style='color:#000000'></i>Medical Refill Requests</a>
                        <a asp-action="All_feedbacks" asp-controller="Medical_Feedback" class="nav-item nav-link"><i class="fa fa-file me-2"></i>Prescription side effect</a>
                       
                    </div>
                </nav>
            </div>
        }

        <!-- Sidebar End -->
        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            <nav id="NavbarSide" class="navbar navbar-expand bg-light navbar-light sticky-top px-4 py-0">
                <a href="index.html" class="navbar-brand d-flex d-lg-none me-4">
                    <h2 class="text-primary mb-0"><i class="fa fa-hashtag"></i></h2>
                </a>
                <a href="#" class="sidebar-toggler flex-shrink-0">
                    <i class="fa fa-bars"></i>
                </a>

                <div class="navbar-nav align-items-center ms-auto">
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="fa fa-envelope me-lg-2"></i>
                            <span class="d-none d-lg-inline-flex">Message</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0">
                            <a href="#" class="dropdown-item">
                                <div class="d-flex align-items-center">
                                    <img class="rounded-circle" src="~/Sidebar2/img/user.jpg" alt="" style="width: 40px; height: 40px;">
                                    <div class="ms-2">
                                        <h6 class="fw-normal mb-0">Jhon send you a message</h6>
                                        <small>15 minutes ago</small>
                                    </div>
                                </div>
                            </a>
                            <hr class="dropdown-divider">
                            <a href="#" class="dropdown-item">
                                <div class="d-flex align-items-center">
                                    <img class="rounded-circle" src="~/Sidebar2/img/user.jpg" alt="" style="width: 40px; height: 40px;">
                                    <div class="ms-2">
                                        <h6 class="fw-normal mb-0">Jhon send you a message</h6>
                                        <small>15 minutes ago</small>
                                    </div>
                                </div>
                            </a>
                            <hr class="dropdown-divider">
                            <a href="#" class="dropdown-item">
                                <div class="d-flex align-items-center">
                                    <img class="rounded-circle" src="~/Sidebar2/img/user.jpg" alt="" style="width: 40px; height: 40px;">
                                    <div class="ms-2">
                                        <h6 class="fw-normal mb-0">Jhon send you a message</h6>
                                        <small>15 minutes ago</small>
                                    </div>
                                </div>
                            </a>
                            <hr class="dropdown-divider">
                            <a href="#" class="dropdown-item text-center">See all message</a>
                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="fa fa-bell me-lg-2"></i>
                            <span class="d-none d-lg-inline-flex">Notifications</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0">
                            @if (ViewBag.Alert.Count > 0 && ViewBag.Alert != null)
                            {
                                foreach (Alert item in ViewBag.Alert)
                                {
                                    <a href="#" class="dropdown-item">
                                        <h6 class="fw-normal mb-0">@item.Message</h6>
                                        <small>@item.Date</small>
                                    </a>
                                    <hr class="dropdown-divider">
                                }
                                <a href="#" class="dropdown-item text-center">See all notifications</a>
                            }
                            else
                            {
                                <a href="#" class="dropdown-item text-center">No Alerts</a>
                            }


                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                            <img class="rounded-circle me-lg-2" src="~/images/icons8-user-100.png" alt="" style="width: 40px; height: 40px;">
                            <span class="d-none d-lg-inline-flex">@UserManager.GetUserAsync(User).Result.FirstName @UserManager.GetUserAsync(User).Result.LastName</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0">
                            <a href="#" class="dropdown-item">My Profile</a>
                            <a href="#" class="dropdown-item">Settings</a>
                            <form id="logoutForm" class="form-inline dropdown-item text-center" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Log out</button>
                            </form>

                        </div>
                    </div>
                </div>
            </nav>
            <div class="container-fluid mt-2">
                <main role="main" class="pb-3 ">
                    @RenderBody()
                </main>
            </div>
            @*        <div class="container-fluid pt-4 px-4 fixed-bottom text-center">
            <div class="bg-light rounded-top p-4">
            <div class="row">
            <div class="col-12 col-sm-6 text-center text-sm-start">
            &copy; <a href="#">Gqeberha Clinic</a>, All Right Reserved.
            </div>
            </div>
            </div>
            </div> *@
            <!-- Footer End -->
        </div>
        <!-- Content End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">

    <link href="https://cdn.datatables.net/v/bs5/dt-1.13.6/b-2.4.2/b-colvis-2.4.2/b-html5-2.4.2/b-print-2.4.2/fh-3.4.0/kt-2.10.0/r-2.5.0/sc-2.2.0/sb-1.6.0/sp-2.2.0/sl-1.7.0/datatables.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/v/bs5/dt-1.13.6/b-2.4.2/b-colvis-2.4.2/b-html5-2.4.2/b-print-2.4.2/fh-3.4.0/kt-2.10.0/r-2.5.0/sc-2.2.0/sb-1.6.0/sp-2.2.0/sl-1.7.0/datatables.min.js"></script>
    <!-- Template Javascript -->
    <script src="~/Sidebar2/js/main.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
